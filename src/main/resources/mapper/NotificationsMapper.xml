<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.socialmedia.mapper.NotificationsMapper">

    <insert id="insertNotifications" parameterType="Notifications">
        INSERT INTO Notifications
            (
                RECEIVER_ID,
                SENDER_ID,
                TYPE,
                MESSAGE,
                IS_READ,
                CREATED_AT
             ) VALUES
                (
                 #{receiverId},
                 #{senderId},
                 #{type},
                 #{message},
                 #{isRead},
                 #{createdAt}
                )
    </insert>
    <delete id="deleteNotifications" parameterType="int">
        DELETE FROM Notifications WHERE ID = #{id}
    </delete>
    <select id="selectNotifications" resultType="Notifications">
        SELECT ID, RECEIVER_ID, SENDER_ID, TYPE, MESSAGE, IS_READ, CREATED_AT
        FROM Notifications
        WHERE RECEIVER_ID = #{receiverId}
    </select>
</mapper>
